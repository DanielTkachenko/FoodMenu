@model FoodMenuWebApp.Models.MenuItem
@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <div class="d-flex justify-content-center">
        <h4>@Model.Name</h4>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" alt="@Model.Name" style="width: 200px; height: 200px;" />
    </div>
    <div class="d-flex justify-content-center">
        <p>@Model.Price.ToString("N2") dollars</p>
    </div>
    <div class="d-flex justify-content-center">
        Ingredients:
        <ul>
            @foreach (var ingredient in Model.MenuItemIngredients)
            {
                <li>@ingredient.Ingredient.Name</li>
            }
        </ul>
    </div>
    <a class="btn btn-info" asp-action="Index" asp-controller="Menu">Back to Menu</a>
</div>
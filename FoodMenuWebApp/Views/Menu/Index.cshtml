@model IEnumerable<FoodMenuWebApp.Models.MenuItem>
@{
    ViewData["Title"] = "Menu";
}

<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" alt="@item.Name" style="width: 200px; height: 200px;" />
                </div>
                <div class="d-flex justify-content-center">
                    <p>@item.Price.ToString("N2") dollars</p>
                </div>
                <a class="btn btn-info" asp-action="Details" asp-controller="Menu" asp-route-id="@item.Id">Details</a>
            </div>
        }
    </div>
</div>